<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.uhouse.TemperatureTakingActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Spinner
            android:id="@+id/temperature_spinner"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/border"
            android:layout_gravity="center_horizontal"
            />
        <ImageView
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:src="@drawable/thermometer"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            />

            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:background="@drawable/border"
                android:layout_gravity="center_horizontal"

                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_marginLeft="30dp"
                    android:id="@+id/temperature_measuring_text"
                    android:text="@string/hint_temperature"
                    android:layout_marginTop="4dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:background="@drawable/border"
                android:layout_gravity="center_horizontal"
                android:id="@+id/button_measuring"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_measuring"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    />
            </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
