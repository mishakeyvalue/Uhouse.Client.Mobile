<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/device_picture"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp">
        <ImageView
            android:id="@+id/time_manager"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="time_picker"
            android:src="@drawable/baseline_query_builder_black_36dp"/>
        <TextView
            android:id="@+id/clock_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23:00"

            />
        </LinearLayout>
        <Button
            android:id="@+id/btn_on"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="@string/btn_switch_on"
            android:layout_marginLeft="20dp"/>
        <Button
            android:id="@+id/btn_off"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="@string/btn_switch_off"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>